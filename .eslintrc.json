{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "plugins": ["jest", "no-else"],
  "rules": {
    "max-depth": ["error", 3],
    "no-else/no-else": 2,
    "import/no-extraneous-dependencies": false,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
